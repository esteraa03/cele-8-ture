{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I", "C:/msys64/mingw64/include",  // Path to FreeGLUT headers
                "-I", "C:/msys64/mingw64/include/GL",  // Path to GL headers
                "board.cpp",  // Your source file
                "-o", "board.exe",  // Output executable name

                // Link OpenGL and FreeGLUT libraries
                "-L", "C:/msys64/mingw64/lib",  // Path to the library files
                "-lfreeglut",  // Link FreeGLUT
                "-lGL",  // Link OpenGL
                "-lGLU"  // Link GLU (needed by GLUT)
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task by Debugger"
        }
    ]
}
